generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(uuid())
  usuario String
  email   String @unique
  senha   String
  albuns  Album[]  @relation("UserAlbuns")
}

model Album {
  id      Int     @id @default(autoincrement())
  nome    String
  link    String @unique
  capa    String
  nota    Decimal
  bandaId Int
  banda   Banda   @relation(fields: [bandaId], references: [id])
  songs   Song[]

  users   User[]  @relation("UserAlbuns")
}

model Banda {
  id     Int     @id @default(autoincrement())
  nome   String  @unique
  foto   String?
  albums Album[]
}

model Song {
  id      Int    @id @default(autoincrement())
  name    String
  link    String
  albumId Int
  album   Album  @relation(fields: [albumId], references: [id], onDelete: Cascade)
}